def reversecomp(dna):
    """
    return String that is the reverse
    complement of the String parameter dna 
    """
    
    comp = []
    for nucleotide in dna:
        if nucleotide == 'a':
            comp.append('t')
        if nucleotide == 't':
            comp.append('a')
        if nucleotide == ('c'):
            comp.append('g')
        if nucleotide == ('g'):
            comp.append('c')
    comp.reverse()
    return ''.join(comp)