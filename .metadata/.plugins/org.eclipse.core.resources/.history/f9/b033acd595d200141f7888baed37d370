def findRegion(dna):
    """
    dna is a string of dna. 
    Return the first valid protein-coding region.
    """
    a = []
    START_CODON = 'atg'
    STOP_CODONS = [ 'taa', 'tag', 'tga' ]
    if START_CODON in dna:
        if STOP_CODONS in dna:
            a.append(dna[START_CODON:STOP_CODONS])
        else:
            return ''
    else: 
        return ""
    for b in a:
        if int(len(b))%3 == 0:
            return str(b)
        else:
            return ''
        