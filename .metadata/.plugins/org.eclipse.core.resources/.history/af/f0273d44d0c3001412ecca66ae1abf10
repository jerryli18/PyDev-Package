def category():
    print r"What category?"
    print r"Traditionally: press A"
    print r"The states: press B"
    print r"The countries: press C"
    category = raw_input("Common Web sites: press D")
    category.strip()
    category.strip(",")
    category.upper()
    if len(category) == 1:
        return category
    else:
        return category[0]
      


